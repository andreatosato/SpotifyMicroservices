@inherits LayoutComponentBase

<MudThemeProvider Theme="@XmasTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Spotify XmasDev
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    MudTheme XmasTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Red.Accent4,
            Secondary = Colors.Red.Accent3,
            AppbarBackground = Colors.Red.Darken4,
            DrawerBackground = Colors.Red.Darken4,
            DrawerIcon = Colors.Red.Default,
            DrawerText = Colors.Shades.White,
            Background = Colors.Red.Default,
            TextPrimary = Colors.Shades.White,
            TextDisabled = Colors.Shades.Black,
            TextSecondary = Colors.LightBlue.Default,
        },
        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "260px",
            DrawerWidthRight = "300px"
        },
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}